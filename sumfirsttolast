#include<stdio.h>
int main()
{
    int n,first,last,sum;
    printf("Enter the number: ");
    scanf("%d",&n);

    last= n%10;
    
    first=n;
    
    while(first>=10)
    {
        first=first / 10;
    }
    sum=first+last;

    printf("First digit = %d\n", first);
    printf("Last digit = %d", last);
    printf("Sum=%d",sum);

    return 0;

}
